<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sinkrondata_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fz.fzapp.common.SyncData"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
       style="@style/DefaultUtils3"
       android:text="@string/titleSyncData1"
       android:id="@+id/textView"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"/>

    <TextView
       style="@style/DefaultHead1"
       android:text="@string/titleSyncData2"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@+id/textView"
       android:layout_toEndOf="@+id/textView"
       android:id="@+id/textView2"
       android:layout_marginLeft="5dp"/>

    <Button
       style="@style/DefaultSplitter"
       android:layout_below="@+id/textView"
       android:id="@+id/splitter"
       android:layout_marginTop="8dp"
       android:layout_alignLeft="@+id/textView"
       android:layout_alignStart="@+id/textView"/>

    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/ic_other_menu"
       android:layout_alignParentTop="true"
       android:layout_alignRight="@+id/splitter"
       android:layout_alignEnd="@+id/splitter"
       android:id="@+id/ivOtherMenu"/>

    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:srcCompat="@drawable/buttonthick"
       android:id="@+id/ivGo"
       android:layout_centerHorizontal="true"
       android:scaleType="fitXY"
       android:layout_below="@+id/splitter"
       android:layout_marginTop="100dp"
       android:layout_marginBottom="156dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"/>

    <TextView
       style="@style/DefaultHead1"
       android:text="@string/titleKlik"
       android:layout_marginTop="56dp"
       android:id="@+id/tvMsg"
       android:layout_below="@+id/splitter"
       android:layout_centerHorizontal="true"/>

    <Button
       android:text="@string/strBtnCancel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="52dp"
       android:id="@+id/btnCancelGo"
       android:visibility="gone"/>
</RelativeLayout>
